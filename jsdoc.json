{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./src"],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    },
    "plugins": [
        "node_modules/better-docs/typescript",
        "better-docs/category",
        "plugins/markdown"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "./docs/",
        "template": "node_modules/better-docs",
        "readme": "./readme.md",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}